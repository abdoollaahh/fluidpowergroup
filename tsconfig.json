{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/modules/*": [
        "components/modules/*"
      ],
      "@/views/*": [
        "components/views/*"
      ],
      "@/hoc/*": [
        "components/hoc/*"
      ]
    },
    "types": [
      "react",
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "utils/swell/swellinit.js",
    "utils/swell/products.js",
    "utils/swell/inventory.js",
    "utils/swell/category.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
